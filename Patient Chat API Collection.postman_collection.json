          "name": "Get Chat Rooms",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.rooms && response.data.rooms.length > 0) {",
