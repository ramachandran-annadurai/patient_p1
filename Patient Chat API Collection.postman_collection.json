              "raw": "{{base_url}}/chat/rooms?patient_id={{patient_id}}",
              "host": ["{{base_url}}"],
              "path": ["chat", "rooms"],
              "query": [
                {
                  "key": "patient_id",
                  "value": "{{patient_id}}",
                  "description": "Patient ID to get chat rooms for"
                }
              ]
            },
            "description": "Get all chat rooms for a specific patient"
          },
          "response": []
        },
